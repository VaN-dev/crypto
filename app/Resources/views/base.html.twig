<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% stylesheets
        filter="compass"
        "@AppBundle/Resources/public/compass/*.scss"
        %}
        <link rel="stylesheet" href="{{ asset_url }}"/>
        <link rel="stylesheet" href="{{ asset('bundles/app/vendor/cryptocoins/cryptocoins.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/vendor/cryptocoins/cryptocoins-colors.css') }}">
        {% endstylesheets %}
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="container">
            <div class="flashbag-content">
                {% for type, flashMessage in app.session.flashbag.all %}
                    <div class="alert alert-{{ type }}" data-type="{{ type }}">
                        <a class="close" aria-hidden="true" data-dismiss="alert" type="button">Ã—</a>
                        {{ flashMessage.0 | trans | raw }}
                        <div class="icon"></div>
                    </div>
                {% endfor %}
            </div>

            {% block body %}{% endblock %}
        </div>

        <script type="text/javascript" src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('assets/vendor/bootstrap-sass/assets/javascripts/bootstrap.min.js') }}"></script>
        <script type="text/javascript">
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
